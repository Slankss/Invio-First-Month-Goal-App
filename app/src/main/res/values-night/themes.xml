<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MovieApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <item name="backgroundColor">@color/bg_color_dark</item>
    </style>

    <style name="Theme.MovieApp.HeaderTextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/header_text_color_dark</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/inter_bold</item>
    </style>

    <style name="Theme.MovieApp.MenuIcon">
        <item name="itemIconTint">@color/white</item>
        <item name="itemTextColor">@color/white</item>
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Theme.MovieApp.SubtitleStyle">
        <item name="android:textColor">@color/content_color_dark</item>
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="fontWeight">500</item>
    </style>
    <style name="Theme.MovieApp.ContentStyle">
        <item name="android:textColor">@color/content_color_dark</item>
        <item name="fontFamily">@font/inter_regular</item>
        <item name="fontWeight">400</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="Theme.MovieApp.ThinContentStyle">
        <item name="android:textColor">@color/content_color_dark</item>
        <item name="fontFamily">@font/inter_light</item>
        <item name="fontWeight">300</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Theme.MovieApp.ShareBottomSheetDialogStyle">
        <item name="background">@color/share_bottom_sheet_dialog_bg_color_dark</item>
    </style>

</resources>